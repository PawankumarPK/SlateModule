<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6ac1754f">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.technocomsolutions.slate.utils.PaintView
                    android:id="@+id/paintView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/paintOptions"
                    android:layout_margin="12dip"
                    android:background="@drawable/slate_border" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                   android:layout_above="@+id/paintOptions"
                    android:background="#6c000000" />



                <LinearLayout
                    android:id="@+id/paintOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:weightSum="10">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/mRefresh"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                       android:layout_weight="1"
                        android:background="@drawable/custom_ripple"
                        android:src="@drawable/ic_refresh"
                        android:contentDescription="@null"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="#6c000000" />

                    <ImageView
                        android:id="@+id/pencil"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple"
                        android:src="@drawable/ic_pencil"
                        android:contentDescription="@null"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="#6c000000" />

                    <ImageView
                        android:id="@+id/mColor"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple"
                        android:src="@drawable/ic_color"
                        android:contentDescription="@null"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="#6c000000" />


                    <ImageView
                        android:id="@+id/eraser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple"
                        android:src="@drawable/ic_eraser"
                        android:contentDescription="@null"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="#6c000000" />

                    <ImageView
                        android:id="@+id/save"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/custom_ripple"
                        android:src="@drawable/ic_save"
                        android:contentDescription="@null"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="#6c000000" />

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/custom_ripple"
                            android:src="@drawable/ic_share"
                            android:contentDescription="@null"/>

                    </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

